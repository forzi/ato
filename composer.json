{
	"name": "stradivari",
	"description": "xml, json, csv conversion",
	"version": "1.0.0",
	"license": "GPL-3.0",
	"keywords": ["test", "project"],
	"authors": [
        {
            "name": "Alexey Penkov",
            "email": "forzi@mail333.com",
            "homepage": "https://github.com/forzi/",
            "role": "Owner, Developer"
        }
	],
	"require": {
		"php": ">=5.3.2",
		"stradivari/lib/date_time": "dev-master",
		"stradivari/lib/data_converter": "dev-master",
        "stradivari/lib/enum": "dev-master",
        "stradivari/lib/class_array": "dev-master",
        "stradivari/lib/pool": "dev-master",
        "stradivari/lib/curl": "dev-master",
        "stradivari/lib/controller": "dev-master",
        "stradivari/lib/render": "dev-master",
        "stradivari/core": "dev-master",
        "stradivari/stradivari_default": "dev-master",
        "ariya/phantomjs_stradivari_fork": "dev-master",
		"keboola/csv": "dev-master",
		"symfony/yaml": "2.5.*@dev",
		"openlss/lib-array2xml": "dev-master"
	},
	"repositories": [
		{
			"type": "package",
			"package": {
			"name": "stradivari/lib/data_converter",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "https://github.com/forzi/data_converter.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "stradivari/lib/date_time",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "https://github.com/forzi/date_time.git",
					"reference": "master"
				}
			}
		},
        {
			"type": "package",
			"package": {
			"name": "stradivari/lib/enum",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "https://github.com/forzi/enum.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "stradivari/lib/class_array",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "git@github.com:forzi/class_array.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "stradivari/lib/pool",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "git@github.com:forzi/pool.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "stradivari/lib/curl",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "git@github.com:forzi/curl.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "stradivari/lib/controller",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "git@github.com:forzi/controller.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "stradivari/lib/render",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "git@github.com:forzi/render.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "stradivari/core",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "git@github.com:forzi/stradivari_core.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "stradivari/stradivari_default",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "git@github.com:forzi/stradivari_default.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
			"name": "ariya/phantomjs_stradivari_fork",
			"version": "dev-master",
				"source": {
					"type": "git",
					"url": "git@github.com:forzi/phantomjs_stradivari_fork.git",
					"reference": "master"
				}
			}
		}
    ],
    "minimum-stability": "dev",
	"autoload": {
		"psr-0": {
            "": "vendor/"
        },
		"psr-4": {
			"stradivari\\": ["vendor/stradivari/lib/"],
			"stradivari\\stradivari_default": ["vendor/stradivari/stradivari_default/dev/", "vendor/stradivari/stradivari_default/test/", "vendor/stradivari/stradivari_default/prod/"],
			"user\\project\\": ["vendor/user/project/dev/", "vendor/user/project/test/", "vendor/user/project/prod/"]
		},
		"files": ["vendor/stradivari/core/functions.php"]
	},
	"scripts": {
		"post-install-cmd": [
			"sudo apt-get install build-essential chrpath git-core libssl-dev libfontconfig1-dev",
            "sudo chmod 777 vendor/stradivari/lib/render/tmp -R",
            "sudo chmod 777 vendor/stradivari/lib/render/render -R",
            "cd vendor/ariya/phantomjs_stradivari_fork/ && ./build.sh --confirm"
        ]
    }
}
